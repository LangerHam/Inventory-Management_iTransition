@model Inventory_Management_iTransition.ViewModel.InventoryIndexViewModel
@{
    ViewBag.Title = "My Inventories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
<h2 class="mb-0">@ViewBag.Title</h2>
@Html.ActionLink("Create New Inventory", "Create", null, new { @class = "btn btn-primary" })
</div>

<div class="card mb-4">
    <div class="card-header">
        <h4 class="mb-0">My Owned Inventories</h4>
    </div>
    <div class="card-body">
        @if (Model.OwnedInventories.Any())
        {
            <div class="list-group">
                @foreach (var item in Model.OwnedInventories)
                {
                    <div class="list-group-item list-group-item-action flex-column align-items-start">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">@Html.ActionLink(item.Title, "Details", new { id = item.Id }, new { @class = "text-decoration-none" })</h5>
                            <small>@item.Items.Count() item(s)</small>
                        </div>
                        <p class="mb-1">@item.Description</p>
                        <div class="mt-2">
                            @Html.ActionLink("Edit Settings", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-outline-secondary" })
                            @Html.ActionLink("Manage Items & Details", "Details", new { id = item.Id }, new { @class = "btn btn-sm btn-info" })
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-muted">You have not created any inventories yet. Click the 'Create' button to get started!</p>
        }
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h4 class="mb-0">Inventories I Can Edit</h4>
    </div>
    <div class="card-body">
        @if (Model.AccessibleInventories.Any())
        {
            <div class="list-group">
                @foreach (var item in Model.AccessibleInventories)
                {
                    <div class="list-group-item list-group-item-action flex-column align-items-start">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">@Html.ActionLink(item.Title, "Details", new { id = item.Id }, new { @class = "text-decoration-none" })</h5>
                            <small>Owned by @item.Owner.UserName</small>
                        </div>
                        <p class="mb-1">Contains @item.Items.Count() item(s).</p>
                        <div class="mt-2">
                            @Html.ActionLink("View Items", "Details", new { id = item.Id }, new { @class = "btn btn-sm btn-info" })
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-muted">You do not have write access to any other inventories.</p>
        }
    </div>
</div>

